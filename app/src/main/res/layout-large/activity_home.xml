<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bromo1"
                android:onClick="onBannerClicked"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jatim"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:id="@+id/jatim"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-light"
                android:textSize="70sp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ranukumbolo_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ranu"
                android:onClick="onRanuClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ranukumbolo"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="70sp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ranu_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kesatu"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="150sp"
                android:id="@+id/first"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/ranu_daerah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ranu_daerah"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:textSize="40sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bromo_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bromo2"
                android:onClick="onBromoClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Bromo"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="70sp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/bromo_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kedua"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="150sp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:id="@+id/second"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/bromo_daerah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Bromo_daerah"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:textSize="40sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pasir_putih_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pasput"
                android:onClick="onPasirPutihClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Pasir_Putih"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="70sp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/pantai_pasir"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ketiga"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="150sp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:id="@+id/third"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/pantai_pasir_daerah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Pasir_Putih_daerah"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:textSize="40sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/teluk_love_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/love"
                android:onClick="onLoveClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Teluk_Love"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="70sp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/telukLove"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keempat"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="150sp"
                android:id="@+id/fourth"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/telukLoveDaerah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Teluk_Love_daerah"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:textSize="40sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ijenView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ijen"
                android:onClick="onIjenClicked"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ijen"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="70sp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ijen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kelima"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="150sp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:id="@+id/textView4"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/IjenDaerah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Ijen_daerah"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:textSize="40sp"/>


        </RelativeLayout>



    </LinearLayout>


</ScrollView>

